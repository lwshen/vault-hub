# Port number for the application server
APP_PORT=3000

# Application name (used in emails and UI)
APP_NAME=VaultHub

# Base URL for generating email links (e.g., https://vaulthub.example.com)
BASE_URL=http://localhost:3000

# JWT Tokens
# use `openssl rand -base64 32` to generate a random key for encryption
JWT_SECRET=

# Encryption key
# use `openssl rand -base64 32` to generate a random key for encryption
ENCRYPTION_KEY=

# Database type (sqlite, postgres, mysql)
DATABASE_TYPE=sqlite

# Database connection URL or file path
# For sqlite: /path/to/database.db
# For mysql: user:pass@tcp(127.0.0.1:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# For postgres: postgres://username:password@localhost:5432/database_name
DATABASE_URL=data.db

# OIDC Configuration (optional)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# SMTP Configuration for email sending
# Leave empty to disable email functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=VaultHub

# Require email verification for new signups (true/false)
EMAIL_VERIFICATION_REQUIRED=false
