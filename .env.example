# Port number for the application server
APP_PORT=3000

# JWT Tokens
# use `openssl rand -base64 32` to generate a random key for encryption
JWT_SECRET=

# Encryption key
# use `openssl rand -base64 32` to generate a random key for encryption
ENCRYPTION_KEY=

# Database type (sqlite, postgres, mysql)
DATABASE_TYPE=sqlite

# Database connection URL or file path
# For sqlite: /path/to/database.db
# For mysql: user:pass@tcp(127.0.0.1:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# For postgres: postgres://username:password@localhost:5432/database_name
DATABASE_URL=data.db

OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# --- SMTP / Email (optional) ---
# Set SMTP_ENABLED=true and configure the rest to send emails
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=
SMTP_FROM_NAME=Vault Hub
# Use TLS for SMTP connections (recommended)
SMTP_TLS=true
# Skip TLS certificate verification (not recommended; testing only)
SMTP_SKIP_VERIFY=false
